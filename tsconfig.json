{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"]
}
